@{
    ViewData["Title"] = "Vault- Privacy Policy";
    Layout = "_Layout";
}

<!-- ===== PRIVACY HERO ===== -->
<section class="vault-section-sm bg-vault">
    <div class="container-xl">
        <div class="row justify-content-center text-center">
            <div class="col-lg-7 vault-animate">
                <div class="vault-icon-circle mx-auto mb-4"
                     style="width:64px;height:64px;font-size:1.6rem;
                            background:linear-gradient(135deg,#1D4ED8,#6366F1);color:#fff;">
                    <i class="bi bi-shield-lock-fill"></i>
                </div>
                <span class="vault-badge mb-3">Legal</span>
                <h1 class="vault-h1 mt-2 mb-3">Privacy Policy</h1>
                <p class="vault-body" style="max-width:520px;margin:0 auto;">
                    Your privacy is not a feature — it's a foundation. Here's exactly how
                    Devnet Vault handles your data.
                </p>
                <p class="vault-body-sm mt-3" style="color:var(--color-text-muted);">
                    Last updated: <strong>@ViewBag.PrivacyPolicyUpdatedDate</strong>
                </p>
            </div>
        </div>
    </div>
</section>

<!-- ===== QUICK SUMMARY CARDS ===== -->
<section class="vault-section-sm bg-vault-surface">
    <div class="container-xl">
        <div class="row g-4 justify-content-center">

            <div class="col-sm-6 col-lg-3 vault-animate">
                <div class="vault-card p-4 h-100 text-center">
                    <div class="vault-icon-circle mx-auto mb-3">
                        <i class="bi bi-eye-slash-fill"></i>
                    </div>
                    <p class="fw-semibold mb-1" style="color:var(--color-secondary);">Zero Knowledge</p>
                    <p class="vault-body-sm">We cannot read your files or passwords — ever.</p>
                </div>
            </div>

            <div class="col-sm-6 col-lg-3 vault-animate vault-delay-1">
                <div class="vault-card p-4 h-100 text-center">
                    <div class="vault-icon-circle mx-auto mb-3">
                        <i class="bi bi-ban"></i>
                    </div>
                    <p class="fw-semibold mb-1" style="color:var(--color-secondary);">No Ads. Ever.</p>
                    <p class="vault-body-sm">Your data is never sold or shared with advertisers.</p>
                </div>
            </div>

            <div class="col-sm-6 col-lg-3 vault-animate vault-delay-2">
                <div class="vault-card p-4 h-100 text-center">
                    <div class="vault-icon-circle mx-auto mb-3">
                        <i class="bi bi-lock-fill"></i>
                    </div>
                    <p class="fw-semibold mb-1" style="color:var(--color-secondary);">AES-256 Encrypted</p>
                    <p class="vault-body-sm">Everything encrypted client-side before upload.</p>
                </div>
            </div>

            <div class="col-sm-6 col-lg-3 vault-animate vault-delay-3">
                <div class="vault-card p-4 h-100 text-center">
                    <div class="vault-icon-circle mx-auto mb-3">
                        <i class="bi bi-trash3-fill"></i>
                    </div>
                    <p class="fw-semibold mb-1" style="color:var(--color-secondary);">Delete Anytime</p>
                    <p class="vault-body-sm">Request full account and data deletion at any time.</p>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- ===== POLICY CONTENT ===== -->
<section class="vault-section bg-vault">
    <div class="container-xl">
        <div class="row justify-content-center">
            <div class="col-lg-8">

                <!-- Table of Contents -->
                <div class="vault-card p-4 mb-5 vault-animate">
                    <p class="fw-semibold mb-3" style="color:var(--color-secondary);">
                        <i class="bi bi-list-ul me-2 text-vault-primary"></i>Table of Contents
                    </p>
                    <ol class="mb-0 ps-3" style="color:var(--color-text-secondary); line-height:2;">
                        <li><a href="#section-information" class="toc-link">Information We Collect</a></li>
                        <li><a href="#section-use"         class="toc-link">How We Use Your Information</a></li>
                        <li><a href="#section-storage"     class="toc-link">Data Storage &amp; Encryption</a></li>
                        <li><a href="#section-sharing"     class="toc-link">Sharing &amp; Disclosure</a></li>
                        <li><a href="#section-cookies"     class="toc-link">Cookies &amp; Tracking</a></li>
                        <li><a href="#section-rights"      class="toc-link">Your Rights</a></li>
                        <li><a href="#section-children"    class="toc-link">Children's Privacy</a></li>
                        <li><a href="#section-changes"     class="toc-link">Changes to This Policy</a></li>
                    </ol>
                </div>

                <!-- 1. Information We Collect -->
                <div id="section-information" class="policy-section vault-animate">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="vault-icon-circle flex-shrink-0"><i class="bi bi-info-circle-fill"></i></div>
                        <h2 class="vault-h2 mb-0">1. Information We Collect</h2>
                    </div>
                    <div class="policy-body">
                        <p class="vault-body">We collect only what's necessary to provide the Vault service:</p>

                        <div class="policy-item">
                            <p class="fw-semibold mb-1" style="color:var(--color-secondary);">Account Information</p>
                            <p class="vault-body-sm">
                                When you register, we collect your name, email address, and a hashed version
                                of your password. We never store your master password in plaintext.
                            </p>
                        </div>

                        <div class="policy-item">
                            <p class="fw-semibold mb-1" style="color:var(--color-secondary);">Files &amp; Passwords</p>
                            <p class="vault-body-sm">
                                All files and passwords you upload are encrypted on your device before they
                                reach our servers. We store only the encrypted ciphertext — we have no
                                technical ability to decrypt or read your content.
                            </p>
                        </div>

                        <div class="policy-item">
                            <p class="fw-semibold mb-1" style="color:var(--color-secondary);">Usage Data</p>
                            <p class="vault-body-sm">
                                We collect anonymised usage metrics (e.g. feature interactions, error logs)
                                to improve the product. This data cannot be linked back to you personally.
                            </p>
                        </div>

                        <div class="policy-item">
                            <p class="fw-semibold mb-1" style="color:var(--color-secondary);">Device &amp; Log Data</p>
                            <p class="vault-body-sm">
                                Standard server logs include your IP address, browser type, operating system,
                                and request timestamps. Logs are retained for 30 days for security purposes
                                then permanently deleted.
                            </p>
                        </div>
                    </div>
                </div>

                <hr class="vault-divider my-5" />

                <!-- 2. How We Use Your Information -->
                <div id="section-use" class="policy-section vault-animate">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="vault-icon-circle flex-shrink-0"><i class="bi bi-gear-fill"></i></div>
                        <h2 class="vault-h2 mb-0">2. How We Use Your Information</h2>
                    </div>
                    <div class="policy-body">
                        <p class="vault-body">Your information is used solely to operate and improve Vault:</p>

                        <div class="policy-item">
                            <p class="fw-semibold mb-1" style="color:var(--color-secondary);">Service Delivery</p>
                            <p class="vault-body-sm">To authenticate you, store your encrypted data, and sync across your devices.</p>
                        </div>

                        <div class="policy-item">
                            <p class="fw-semibold mb-1" style="color:var(--color-secondary);">Security &amp; Fraud Prevention</p>
                            <p class="vault-body-sm">To detect suspicious login attempts, prevent unauthorised access, and protect your account.</p>
                        </div>

                        <div class="policy-item">
                            <p class="fw-semibold mb-1" style="color:var(--color-secondary);">Communications</p>
                            <p class="vault-body-sm">
                                To send you transactional emails (e.g. email verification, password reset).
                                We do not send marketing emails unless you explicitly opt in.
                            </p>
                        </div>

                        <div class="policy-item">
                            <p class="fw-semibold mb-1" style="color:var(--color-secondary);">Product Improvement</p>
                            <p class="vault-body-sm">Anonymised, aggregated usage data helps us understand which features are valuable and where to improve.</p>
                        </div>
                    </div>
                </div>

                <hr class="vault-divider my-5" />

                <!-- 3. Data Storage & Encryption -->
                <div id="section-storage" class="policy-section vault-animate">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="vault-icon-circle flex-shrink-0"><i class="bi bi-hdd-fill"></i></div>
                        <h2 class="vault-h2 mb-0">3. Data Storage &amp; Encryption</h2>
                    </div>
                    <div class="policy-body">
                        <div class="vault-card-dark p-4 mb-4"
                             style="border-radius:var(--r-lg);">
                            <div class="d-flex align-items-center gap-3 mb-2">
                                <i class="bi bi-shield-lock-fill" style="font-size:1.5rem;color:#818cf8;"></i>
                                <p class="fw-semibold mb-0" style="color:#fff;">End-to-End Encryption Model</p>
                            </div>
                            <p class="vault-body-sm mb-0" style="color:rgba(255,255,255,.7);">
                                Encryption and decryption happen exclusively on your device. Your encryption key
                                is derived from your master password using PBKDF2 with 310,000 iterations and
                                is never transmitted to our servers. Even if Devnet were compelled by law
                                enforcement, we have nothing meaningful to hand over.
                            </p>
                        </div>

                        <div class="policy-item">
                            <p class="fw-semibold mb-1" style="color:var(--color-secondary);">Encryption Standard</p>
                            <p class="vault-body-sm">AES-256-GCM for all file and password data.</p>
                        </div>

                        <div class="policy-item">
                            <p class="fw-semibold mb-1" style="color:var(--color-secondary);">Data Centres</p>
                            <p class="vault-body-sm">
                                Encrypted data is stored in ISO 27001-certified data centres with
                                physical access controls, redundant power, and 99.9% uptime SLA.
                            </p>
                        </div>

                        <div class="policy-item">
                            <p class="fw-semibold mb-1" style="color:var(--color-secondary);">Data in Transit</p>
                            <p class="vault-body-sm">All communications use TLS 1.3. HTTP connections are automatically upgraded.</p>
                        </div>

                        <div class="policy-item">
                            <p class="fw-semibold mb-1" style="color:var(--color-secondary);">Retention</p>
                            <p class="vault-body-sm">
                                Your encrypted data is retained for as long as your account is active.
                                Upon account deletion, all data is permanently purged within 30 days.
                            </p>
                        </div>
                    </div>
                </div>

                <hr class="vault-divider my-5" />

                <!-- 4. Sharing & Disclosure -->
                <div id="section-sharing" class="policy-section vault-animate">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="vault-icon-circle flex-shrink-0"><i class="bi bi-share-fill"></i></div>
                        <h2 class="vault-h2 mb-0">4. Sharing &amp; Disclosure</h2>
                    </div>
                    <div class="policy-body">
                        <p class="vault-body">
                            <strong style="color:var(--color-secondary);">We do not sell your data.</strong>
                            We do not share personal information with third parties except in the following
                            limited circumstances:
                        </p>

                        <div class="policy-item">
                            <p class="fw-semibold mb-1" style="color:var(--color-secondary);">Service Providers</p>
                            <p class="vault-body-sm">
                                Trusted vendors who help us operate Vault (e.g. cloud hosting, email delivery)
                                operate under strict data processing agreements and may only use your data as
                                instructed by us.
                            </p>
                        </div>

                        <div class="policy-item">
                            <p class="fw-semibold mb-1" style="color:var(--color-secondary);">Legal Requirements</p>
                            <p class="vault-body-sm">
                                If required by a valid court order or law, we will disclose only the minimum
                                account metadata required. Remember: we cannot provide your encrypted content
                                because we cannot decrypt it.
                            </p>
                        </div>

                        <div class="policy-item">
                            <p class="fw-semibold mb-1" style="color:var(--color-secondary);">Business Transfers</p>
                            <p class="vault-body-sm">
                                In the event of a merger or acquisition, your data will remain subject to this
                                Privacy Policy and you will be notified before any transfer occurs.
                            </p>
                        </div>
                    </div>
                </div>

                <hr class="vault-divider my-5" />

                <!-- 5. Cookies & Tracking -->
                <div id="section-cookies" class="policy-section vault-animate">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="vault-icon-circle flex-shrink-0"><i class="bi bi-cookie"></i></div>
                        <h2 class="vault-h2 mb-0">5. Cookies &amp; Tracking</h2>
                    </div>
                    <div class="policy-body">
                        <p class="vault-body">We use only essential cookies — no advertising or cross-site tracking cookies.</p>

                        <div class="row g-3 mt-1">
                            <div class="col-sm-6">
                                <div class="vault-card p-3 h-100">
                                    <div class="d-flex align-items-center gap-2 mb-2">
                                        <span class="vault-badge" style="font-size:.65rem;">Essential</span>
                                    </div>
                                    <p class="fw-semibold mb-1" style="color:var(--color-secondary);font-size:.9rem;">AccessToken</p>
                                    <p class="vault-body-sm mb-0">HTTP-only cookie storing your JWT for authentication. Expires with your session.</p>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="vault-card p-3 h-100">
                                    <div class="d-flex align-items-center gap-2 mb-2">
                                        <span class="vault-badge" style="font-size:.65rem;">Essential</span>
                                    </div>
                                    <p class="fw-semibold mb-1" style="color:var(--color-secondary);font-size:.9rem;">CSRF Token</p>
                                    <p class="vault-body-sm mb-0">Protects against cross-site request forgery attacks.</p>
                                </div>
                            </div>
                        </div>

                        <p class="vault-body-sm mt-4">
                            We do <strong>not</strong> use Google Analytics, Facebook Pixel, or any other
                            third-party tracking scripts. Your browsing behaviour within Vault is not
                            monitored by external parties.
                        </p>
                    </div>
                </div>

                <hr class="vault-divider my-5" />

                <!-- 6. Your Rights -->
                <div id="section-rights" class="policy-section vault-animate">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="vault-icon-circle flex-shrink-0"><i class="bi bi-person-check-fill"></i></div>
                        <h2 class="vault-h2 mb-0">6. Your Rights</h2>
                    </div>
                    <div class="policy-body">
                        <p class="vault-body">
                            Depending on your jurisdiction (GDPR, CCPA, etc.) you have the following rights.
                            To exercise any of them, contact us at
                            <a href="mailto:@ViewBag.SupportEmailAddress" style="color:var(--color-primary);">@ViewBag.SupportEmailAddress</a>.
                        </p>

                        <div class="row g-3 mt-1">
                            <div class="col-sm-6">
                                <div class="d-flex align-items-start gap-3">
                                    <div class="vault-icon-circle flex-shrink-0" style="width:36px;height:36px;font-size:1rem;">
                                        <i class="bi bi-eye"></i>
                                    </div>
                                    <div>
                                        <p class="fw-semibold mb-0" style="color:var(--color-secondary);font-size:.9rem;">Access</p>
                                        <p class="vault-body-sm mb-0">Request a copy of your personal data.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="d-flex align-items-start gap-3">
                                    <div class="vault-icon-circle flex-shrink-0" style="width:36px;height:36px;font-size:1rem;">
                                        <i class="bi bi-pencil-fill"></i>
                                    </div>
                                    <div>
                                        <p class="fw-semibold mb-0" style="color:var(--color-secondary);font-size:.9rem;">Rectification</p>
                                        <p class="vault-body-sm mb-0">Correct inaccurate personal data we hold.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="d-flex align-items-start gap-3">
                                    <div class="vault-icon-circle flex-shrink-0" style="width:36px;height:36px;font-size:1rem;">
                                        <i class="bi bi-trash3-fill"></i>
                                    </div>
                                    <div>
                                        <p class="fw-semibold mb-0" style="color:var(--color-secondary);font-size:.9rem;">Erasure</p>
                                        <p class="vault-body-sm mb-0">Request permanent deletion of your account and all associated data.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="d-flex align-items-start gap-3">
                                    <div class="vault-icon-circle flex-shrink-0" style="width:36px;height:36px;font-size:1rem;">
                                        <i class="bi bi-download"></i>
                                    </div>
                                    <div>
                                        <p class="fw-semibold mb-0" style="color:var(--color-secondary);font-size:.9rem;">Portability</p>
                                        <p class="vault-body-sm mb-0">Export your data in a machine-readable format.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="d-flex align-items-start gap-3">
                                    <div class="vault-icon-circle flex-shrink-0" style="width:36px;height:36px;font-size:1rem;">
                                        <i class="bi bi-slash-circle-fill"></i>
                                    </div>
                                    <div>
                                        <p class="fw-semibold mb-0" style="color:var(--color-secondary);font-size:.9rem;">Object</p>
                                        <p class="vault-body-sm mb-0">Object to certain types of processing of your data.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="d-flex align-items-start gap-3">
                                    <div class="vault-icon-circle flex-shrink-0" style="width:36px;height:36px;font-size:1rem;">
                                        <i class="bi bi-pause-circle-fill"></i>
                                    </div>
                                    <div>
                                        <p class="fw-semibold mb-0" style="color:var(--color-secondary);font-size:.9rem;">Restriction</p>
                                        <p class="vault-body-sm mb-0">Request restriction of processing while a dispute is resolved.</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <p class="vault-body-sm mt-4">
                            We will respond to all requests within <strong>30 days</strong>. We may need to
                            verify your identity before processing a request.
                        </p>
                    </div>
                </div>

                <hr class="vault-divider my-5" />

                <!-- 7. Children's Privacy -->
                <div id="section-children" class="policy-section vault-animate">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="vault-icon-circle flex-shrink-0"><i class="bi bi-emoji-smile-fill"></i></div>
                        <h2 class="vault-h2 mb-0">7. Children's Privacy</h2>
                    </div>
                    <div class="policy-body">
                        <p class="vault-body">
                            Vault is not directed at children under the age of 13. We do not knowingly
                            collect personal information from children. If we become aware that a child
                            under 13 has provided us with personal data, we will delete it immediately.
                            If you believe a child has registered, please contact
                            <a href="mailto:@ViewBag.SupportEmailAddress" style="color:var(--color-primary);">@ViewBag.SupportEmailAddress</a>.
                        </p>
                    </div>
                </div>

                <hr class="vault-divider my-5" />

                <!-- 8. Changes -->
                <div id="section-changes" class="policy-section vault-animate">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="vault-icon-circle flex-shrink-0"><i class="bi bi-arrow-repeat"></i></div>
                        <h2 class="vault-h2 mb-0">8. Changes to This Policy</h2>
                    </div>
                    <div class="policy-body">
                        <p class="vault-body">
                            We may update this Privacy Policy from time to time. When we do, we will revise
                            the "Last updated" date at the top of this page and, for material changes,
                            notify you by email at least 14 days in advance. Continued use of Vault after
                            the effective date constitutes acceptance of the revised policy.
                        </p>
                    </div>
                </div>

                <hr class="vault-divider my-5" />
            </div>
        </div>
    </div>
</section>

<!-- ===== CTA BANNER ===== -->
<section class="vault-section-sm"
         style="background: linear-gradient(135deg, var(--color-primary), #6366F1);">
    <div class="container-xl text-center">
        <h2 class="vault-h2 vault-animate mb-3" style="color:#fff;">
            Trust starts with transparency.
        </h2>
        <p class="vault-body vault-animate vault-delay-1 mb-5"
           style="color:rgba(255,255,255,.8); max-width:460px; margin:0 auto 2rem;">
            Join a platform that puts your privacy first — not as a legal checkbox, but as a
            core principle.
        </p>
        <div class="d-flex justify-content-center gap-3 flex-wrap vault-animate vault-delay-2">
            <a href="#" class="btn-vault-primary"
               style="background:#fff; color:var(--color-primary)!important; border-color:#fff;">
                <i class="bi bi-rocket-takeoff-fill"></i> Get Started Free
            </a>
            <a href="#" class="btn-vault-outline"
               style="border-color:rgba(255,255,255,.6); color:#fff!important;">
                <i class="bi bi-download"></i> Download App
            </a>
        </div>
    </div>
</section>

@section Styles {
    <style>
        .policy-section { margin-bottom: 1rem; }
        .policy-body    { padding-left: 1rem; }
        .policy-item {
            border-left: 3px solid var(--color-primary-light);
            padding: .75rem 1rem;
            border-radius: 0 var(--r-sm) var(--r-sm) 0;
            background: var(--color-surface);
            margin-bottom: 1rem;
        }
        .toc-link {
            color: var(--color-primary);
            text-decoration: none;
            transition: color var(--t-fast);
        }
        .toc-link:hover { color: var(--color-primary-dark); text-decoration: underline; }
    </style>
}

@section Scripts {
    <script>
        $(function () {
            $('a[href^="#"]').on('click', function (e) {
                var target = $(this.getAttribute('href'));
                if (target.length) {
                    e.preventDefault();
                    $('html, body').animate({
                        scrollTop: target.offset().top - 90
                    }, 400);
                }
            });
        });
    </script>
}