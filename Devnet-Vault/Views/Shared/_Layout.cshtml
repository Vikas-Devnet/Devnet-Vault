<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />

    <!-- Vault Theme -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Page-specific CSS -->
    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="bg-vault d-flex flex-column min-vh-100">

    <!-- ===== NAVBAR ===== -->
    <header>
        <nav class="navbar vault-navbar fixed-top px-3 px-md-4">
            <div class="container-xl d-flex align-items-center justify-content-between w-100">

                <!-- Brand -->
                <a class="d-flex align-items-center gap-2 text-decoration-none"
                   asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/favicon.ico"
                         alt="Vault"
                         style="width:38px; height:38px; object-fit:contain;">
                    <span class="navbar-brand-text">Vault</span>
                </a>

                <!-- Right CTAs + Mobile toggler -->
                <div class="d-flex align-items-center gap-2">
                    <a asp-area="" asp-controller="users" asp-action="auth" class="btn-vault-primary d-none d-sm-inline-flex">
                        <i class="bi bi-rocket-takeoff-fill"></i> Go to the app
                    </a>
                    <a href="#" class="btn-vault-outline d-none d-md-inline-flex">
                        <i class="bi bi-download"></i> Download App
                    </a>
                </div>
            </div>
        </nav>
        
    </header>
    <main role="main" class="flex-grow-1" style="padding-top: var(--navbar-height);">
        @RenderBody()
    </main>

    <!-- ===== FOOTER ===== -->
    <footer class="vault-footer py-5">
        <div class="container-xl">
            <div class="row align-items-center gy-4">

                <!-- Brand -->
                <div class="col-md-4">
                    <p class="footer-powered mb-0">Powered by</p>
                    <p class="footer-brand mb-0">Devnet</p>
                </div>

                <!-- Nav Links -->
                <div class="col-md-4 text-md-center">
                    <div class="d-flex justify-content-start justify-content-md-center gap-4 flex-wrap">
                        <a href="https://devnet.ind.in/" target="_blank">About Devnet</a>
                        <a asp-area="" asp-controller="Home" asp-action="TermsConditions">Terms &amp; Conditions</a>
                        <a href="#" style="color:rgba(255,255,255,.65);">Help</a>
                    </div>
                </div>

                <!-- Right: Help + Download -->
                <div class="col-md-4 text-md-end">
                    <div class="d-flex align-items-center justify-content-start justify-content-md-end gap-3">
                       
                        <a href="#" class="btn-vault-primary" style="font-size:.8rem; padding:.5rem 1.2rem;">
                            <i class="bi bi-download"></i> Download App Now
                        </a>
                    </div>
                </div>
            </div>

            <hr style="border-color:rgba(255,255,255,.1); margin: 2rem 0 1rem;" />

            <p class="text-center mb-0" style="color:rgba(255,255,255,.3); font-size:.75rem;">
                &copy; @DateTime.Now.Year Devnet. All rights reserved. &nbsp;·&nbsp;
                <a asp-area="" asp-controller="Home" asp-action="Privacy"
                   style="color:rgba(255,255,255,.3);">Privacy Policy</a>
            </p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/vault.js" asp-append-version="true"></script>

     <script>
        $(function () {
            // Navbar shadow on scroll
            $(window).on('scroll', function () {
                $('.vault-navbar').toggleClass('shadow', $(this).scrollTop() > 10);
            });

            // Scroll-reveal for .vault-animate elements
            if ('IntersectionObserver' in window) {
                const io = new IntersectionObserver((entries) => {
                    entries.forEach(e => {
                        if (e.isIntersecting) {
                            e.target.style.opacity = '1';
                            e.target.style.transform = 'translateY(0)';
                            io.unobserve(e.target);
                        }
                    });
                }, { threshold: 0.12 });

                document.querySelectorAll('.vault-animate').forEach(el => {
                    el.style.opacity = '0';
                    el.style.transform = 'translateY(28px)';
                    el.style.transition = 'opacity .55s ease, transform .55s ease';

                    const delay = el.classList.contains('vault-delay-4') ? '0.46s'
                                : el.classList.contains('vault-delay-3') ? '0.34s'
                                : el.classList.contains('vault-delay-2') ? '0.22s'
                                : el.classList.contains('vault-delay-1') ? '0.10s'
                                : '0s';
                    el.style.transitionDelay = delay;
                    io.observe(el);
                });
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
